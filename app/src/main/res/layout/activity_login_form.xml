<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginForm">

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="269dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="text"
        android:text="Last Name"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="262dp"
        android:layout_height="105dp"
        android:autoSizeTextType="uniform"
        android:text="Your fries deserve better."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ED0808"
        android:textColorHint="#F01919"
        android:textColorLink="#E70D0D"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="68dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="268dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="text"
        android:text="First Name"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="254dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="400dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="266dp"
        android:layout_height="41dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Password"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="484dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColorHighlight="#E0D4D4"
        android:textColorLink="#EF0F0F"
        tools:layout_editor_absoluteX="144dp"
        tools:layout_editor_absoluteY="572dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="259dp"
        android:layout_height="18dp"
        android:text="Join TomatoBasil now.It's free!"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="209dp" />

</androidx.constraintlayout.widget.ConstraintLayout>